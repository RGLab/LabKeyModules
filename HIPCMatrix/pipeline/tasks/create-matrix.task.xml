<?xml version='1.0' encoding='UTF-8'?>
<task xmlns='http://labkey.org/pipeline/xml'
      xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
      xsi:type='ScriptTaskType'
      name='create-matrix' version='0.0'>
    <description>Create expression matrix</description>
    <author>kevink@labkey.com</author>
    <inputs>
        <file name='input.csv' splitFiles='true'/>
        <file name='input.CEL' splitFiles='true'/>
        <file name='input.tsv' splitFiles='true'/>
        <file name='input.txt' splitFiles='true'/>
    </inputs>
    <outputs>
        <file name='output.tsv' useProtocolNameAsBaseName='true' outputDir='../../../../analysis/exprs_matrices'/>
        <file name='output.summary' suffixes='.tsv.summary' useProtocolNameAsBaseName='true' outputDir='../../../../analysis/exprs_matrices'/>
        <file name='output.orig' suffixes='.tsv.summary.orig' useProtocolNameAsBaseName='true' outputDir='../../../../analysis/exprs_matrices'/>
        <file name='output.raw' suffixes='.tsv.raw' useProtocolNameAsBaseName='true' outputDir='../../../../analysis/exprs_matrices'/>
    </outputs>
    <script file='create-matrix.R'/>
</task>
